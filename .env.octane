# Laravel Octane Production Environment Configuration
APP_NAME="Tribe Social Network"
APP_ENV=production
APP_KEY=base64:YOUR_PRODUCTION_APP_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://your-tribe-domain.com

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=your-db-host
DB_PORT=5432
DB_DATABASE=tribe_production
DB_USERNAME=tribe_user
DB_PASSWORD=your-secure-db-password

# Redis Configuration (Critical for Octane)
REDIS_HOST=your-redis-host
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=tribe_cache

# Session Configuration  
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=your-tribe-domain.com

# Queue Configuration
QUEUE_CONNECTION=redis
REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE=default

# Octane Configuration
OCTANE_SERVER=swoole
OCTANE_HTTPS=true
OCTANE_HOST=0.0.0.0
OCTANE_PORT=8000
OCTANE_WATCH=false

# Swoole Configuration
OCTANE_SWOOLE_WORKERS=8
OCTANE_TASK_WORKERS=4
OCTANE_MAX_REQUESTS=1000
OCTANE_MAX_CONNECTIONS=10000
OCTANE_PACKAGE_MAX_LENGTH=20971520

# Memory Management
OCTANE_GC_ENABLED=true
OCTANE_GC_INTERVAL=500
OCTANE_GC_MEMORY_LIMIT=512

# Queue Workers
QUEUE_WORKERS_DEFAULT=3
QUEUE_WORKERS_NOTIFICATIONS=5
QUEUE_WORKERS_MEDIA=2
QUEUE_WORKERS_ANALYTICS=1

# Monitoring
QUEUE_MONITORING_ENABLED=true
QUEUE_LOG_SLOW_JOBS=true
QUEUE_SLOW_JOB_THRESHOLD=30

# Broadcasting (for real-time features)
BROADCAST_CONNECTION=redis
PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-key
PUSHER_APP_SECRET=your-pusher-secret
PUSHER_HOST=your-pusher-host
PUSHER_PORT=443
PUSHER_SCHEME=https

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-email
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-tribe-domain.com
MAIL_FROM_NAME="Tribe Social Network"

# File Storage
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-tribe-bucket
AWS_USE_PATH_STYLE_ENDPOINT=false

# OAuth Configuration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=https://your-tribe-domain.com/auth/github/callback

# Security
SANCTUM_STATEFUL_DOMAINS=your-tribe-domain.com
SESSION_SECURE_COOKIE=true

# Logging
LOG_CHANNEL=stack
LOG_STACK=single,octane
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Octane Specific Channels
LOG_OCTANE_CHANNEL=daily
LOG_OCTANE_LEVEL=warning